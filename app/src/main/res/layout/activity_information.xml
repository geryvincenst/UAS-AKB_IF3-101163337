<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Information_Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/imageicon"
        android:src="@drawable/icon"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue"
        android:layout_below="@+id/imageicon"
        android:id="@+id/listv1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/isicatatan"
        android:layout_below="@+id/version"
        android:textSize="17sp"
        android:justificationMode="inter_word"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="Notebook adalah aplikasi yang digunakan untuk mencatat pengalaman atau peristiwa dalam hidup seseorang. Aplikasi ini dapat diinstal pada smartphone atau tablet dan dimanfaatkan sebagai alternatif jurnal fisik. Aplikasi ini memiliki berbagai macam fitur yang membantu penggunanya untuk mengatur rencana, meningkatkan produktivitas, mengelola waktu, serta memantau perkembangan pribadi."
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listv1"
        android:id="@+id/ntbook"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Notebook" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ntbook"
        android:id="@+id/version"
        android:textSize="17sp"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"
        android:text="1.0 (v1.0)" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isicatatan"
        android:id="@+id/feature"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Kelebihan : " />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feature"
        android:id="@+id/kelebihan1"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="Mudah Diakses" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kelebihan1"
        android:id="@+id/kelebihan2"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="Mudah Dikelola dan Disimpan" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kelebihan2"
        android:id="@+id/kelebihan3"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="Meningkatkan Produktivitas" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kelebihan3"
        android:id="@+id/kelebihan4"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="Meningkatkan Kreativitas"
        android:layout_marginBottom="50dp"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bottom_background"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:elevation="2dp"
        app:itemIconSize="20dp"
        app:menu="@menu/navigation"
        app:itemIconTint="@drawable/item_selector"
        app:labelVisibilityMode="unlabeled"/>

</RelativeLayout>